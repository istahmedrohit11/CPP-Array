#include<iostream>
using namespace std;
int main(){
    int num[]={5,12,22,1,-15,24};
    int size=6;
    int smallest= INT_MAX;
    int biggest= INT_MIN;
    for(int i=0; i<size;i++){
        if(num[i]<smallest){
            smallest=num[i];
        }
    }
    for(int i=0; i<size;i++){
        if(num[i]>biggest){
            biggest=num[i];
        }
    }
     cout<<"smallest is: "<<smallest<<"\n";
     cout<<"biggest is: "<<biggest<<"\n";
    return 0;
}
